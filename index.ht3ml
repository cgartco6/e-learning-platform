<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI LearnHub - Intelligent E-Learning Platform</title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/responsive.css">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-logo">AI LearnHub</div>
            <div class="nav-menu">
                <a href="#home" class="nav-link">Home</a>
                <a href="#courses" class="nav-link">Courses</a>
                <a href="#dashboard" class="nav-link">Dashboard</a>
                <a href="#ai-creator" class="nav-link">AI Creator</a>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section id="home" class="hero">
        <div class="hero-content">
            <h1>AI-Powered Learning Experience</h1>
            <p>Revolutionary courses created and managed by synthetic intelligence</p>
            <button class="cta-button" onclick="showCourseCatalog()">Explore Courses</button>
        </div>
    </section>

    <!-- Course Catalog -->
    <section id="courses" class="course-section">
        <div class="container">
            <h2>Featured Courses</h2>
            <div id="course-grid" class="course-grid">
                <!-- AI-generated courses will appear here -->
            </div>
        </div>
    </section>

    <!-- AI Creator Panel -->
    <section id="ai-creator" class="ai-panel">
        <div class="container">
            <h2>AI Course Creator</h2>
            <div class="ai-controls">
                <button onclick="activateCourseAI()" class="ai-btn">Activate Course Creator AI</button>
                <button onclick="activateMarketingAI()" class="ai-btn">Activate Marketing AI</button>
                <button onclick="activateAllAI()" class="ai-btn primary">Activate All AI Systems</button>
            </div>
            <div id="ai-status" class="ai-status"></div>
        </div>
    </section>

    <!-- Owner Dashboard -->
    <section id="dashboard" class="dashboard">
        <div class="container">
            <h2>Business Dashboard</h2>
            <div class="stats-grid">
                <div class="stat-card">
                    <h3>Revenue</h3>
                    <div id="revenue-display" class="stat-value">R 0.00</div>
                </div>
                <div class="stat-card">
                    <h3>Weekly Payout</h3>
                    <div id="payout-display" class="stat-value">R 0.00</div>
                </div>
                <div class="stat-card">
                    <h3>Growth Fund</h3>
                    <div id="growth-fund" class="stat-value">R 0.00</div>
                </div>
                <div class="stat-card">
                    <h3>Active Students</h3>
                    <div id="student-count" class="stat-value">0</div>
                </div>
            </div>
            
            <div class="charts-section">
                <canvas id="revenueChart" width="400" height="200"></canvas>
            </div>
        </div>
    </section>

    <!-- Payment System -->
    <section class="payment-section">
        <div class="container">
            <h2>Secure Payment</h2>
            <div class="payment-options">
                <div class="payment-method" onclick="selectPayment('fnb')">
                    <h4>FNB EFT</h4>
                    <p>Direct Bank Transfer</p>
                </div>
                <div class="payment-method" onclick="selectPayment('payfast')">
                    <h4>PayFast</h4>
                    <p>South African Payments</p>
                </div>
                <div class="payment-method" onclick="selectPayment('stripe')">
                    <h4>Stripe</h4>
                    <p>Global Payments</p>
                </div>
            </div>
        </div>
    </section>

    <script src="js/ai-manager.js"></script>
    <script src="js/dashboard.js"></script>
    <script src="js/app.js"></script>
</body>
</html>
